<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.mohobby.mapper.moim.MoimMapper">

<!-- 전체 조회 -->
<select id="moimAllSelect" resultType="MoimVO">
	select * from moim ORDER BY moim_id DESC
</select>

<!-- 인기 목록 조회 -->
<select id="moimPopularSelect" resultType="MoimVO">
	select * from moim ORDER BY reg_cnt DESC
</select>

<!-- 소모임명 검색 -->
<select id="moimNameSelect" resultType="MoimVO">
	select * from moim where moim_name Like '%#{moim_name}%' order by moim_id DESC;
</select>

</mapper>